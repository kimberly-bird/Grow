@model grow.Models.Plant

@{
    ViewData["Title"] = "Create";
    ViewBag.BodyClass = "faded-background-image";
}

<h2 class="form-styles">Add a New Plant</h2>

<hr />
<div class="row form-background">
    <div class="col align-self-center form-column">
        <form controller="Plants" method="post" asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Notes" class="control-label"></label>
                <input asp-for="Notes" class="form-control" />
                <span asp-validation-for="Notes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="custom-file">
                    <label asp-for="InitialImage" class="custom-file-label" for="inputGroupFile02">Upload plant image</label>
                    <input asp-for="InitialImage" type="file" class="custom-file-input" id="inputGroupFile02" name="file" />
                    <span asp-validation-for="InitialImage" class="input-group-text" id=""></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="PlantTypeId" class="control-label"></label>
                <select asp-for="PlantTypeId" class="form-control" asp-items="ViewBag.PlantTypeId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
