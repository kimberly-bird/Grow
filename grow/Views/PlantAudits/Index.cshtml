@model IEnumerable<grow.Models.PlantAudit>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DateCreated)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Plant)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Water)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Light)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RequirementsChanged)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InfestationIssue)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Notes)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UpdatedImage)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DateCreated)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Plant.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Water.Regularity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Light.Requirements)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RequirementsChanged)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.InfestationIssue)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Notes)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UpdatedImage)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.PlantAuditId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.PlantAuditId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.PlantAuditId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
