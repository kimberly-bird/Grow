@model grow.Models.ViewModels.CreatePlantAuditViewModel

@{
    ViewData["Title"] = "Create";
}

<h2>Plant Requirements</h2>

<h4>Now that you've entered your plant, whenever you need to make a change to the requirements to keep your damn plant alive, update your plant here.</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PlantAudit.WaterId" class="control-label"></label>
                <select asp-for="PlantAudit.WaterId" class ="form-control" asp-items="@Model.WaterList"></select>
            </div>
            <div class="form-group">
                <label asp-for="PlantAudit.LightId" class="control-label"></label>
                <select asp-for="PlantAudit.LightId" class ="form-control" asp-items="@Model.LightList"></select>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="PlantAudit.RequirementsChanged" /> @Html.DisplayNameFor(model => model.PlantAudit.RequirementsChanged)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="PlantAudit.InfestationIssue" /> @Html.DisplayNameFor(model => model.PlantAudit.InfestationIssue)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="PlantAudit.Notes" class="control-label"></label>
                <input asp-for="PlantAudit.Notes" class="form-control" />
                <span asp-validation-for="PlantAudit.Notes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PlantAudit.UpdatedImage" class="control-label"></label>
                <input asp-for="PlantAudit.UpdatedImage" class="form-control" />
                <span asp-validation-for="PlantAudit.UpdatedImage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
